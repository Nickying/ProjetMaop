<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Accueil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomApplication"
        android:text="@string/nomApplication"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quitter"
        android:id="@+id/btnquitter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBoutique1"
        android:layout_below="@+id/nomApplication"
        android:layout_toLeftOf="@+id/nomApplication"
        android:layout_toStartOf="@+id/nomApplication"
        android:layout_marginTop="96dp"
        android:src="@drawable/auchan" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBoutique2"
        android:layout_toRightOf="@+id/nomApplication"
        android:layout_toEndOf="@+id/nomApplication"
        android:layout_alignBottom="@+id/imgBoutique1"
        android:src="@drawable/carrefour" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBoutique3"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/nomApplication"
        android:layout_toEndOf="@+id/nomApplication"
        android:src="@drawable/intermarche" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBoutique4"
        android:layout_alignTop="@+id/imgBoutique3"
        android:layout_alignLeft="@+id/imgBoutique1"
        android:layout_alignStart="@+id/imgBoutique1"
        android:src="@drawable/leclerc" />

</RelativeLayout>
